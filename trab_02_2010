                        Trab. De Info.2
1)
#include <stdio.h>
#include <conio.h>
int main( )
{
float x,n,a;
printf("Digite um numero:");
scanf("%f",&x);
if(x >20)
{
n=x;
}
a=0;
printf(" Esse numero e maior que 20 e e: %.2f",n,a);
getch();
return(0);
}

2)
#include <stdio.h>
#include <conio.h>
int main( )
{
int n;
printf("Digite um numero:");
scanf("%d",&n);
if((n%2)==0)
{
printf(" O numero e par",n);
}
else
{
printf(" O numero e impar",n);
}
getch();
return(0);
}

3)
#include <stdio.h>
#include <conio.h>
int main ()
{
int x;
printf("Digite um numero:");
scanf("%d",&x);
if(x<0)
{
printf("O numero e: NEGATIVO", x);
}
else
if ( x==0)
{
printf("O Numero e: NULO", x);
}

else
{
printf("O numero e: POSITIVO", x);
}
getch();
return(0);
}

