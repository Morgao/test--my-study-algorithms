#include <stdio.h>
#include <stdlib.h>

int main() {
    int n1, n2;
    float n3, x;
   
    scanf("%d",&n1);
    scanf("%d",&n2);
    scanf("%.2f",&n3);
   
    x = n2 * n3;
   
    printf("NUMBER = %d\n",n1);
    printf("SALARY = U$ %.2f\n",x);
   
   
    return 0;
}


